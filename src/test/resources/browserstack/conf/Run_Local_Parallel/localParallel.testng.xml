    </test>
    <test name="BSTestEnv2">
        <parameter name="environment" value="env2"/>
        <classes>
            <class name="Runner.CucumberTest"/>
        </classes>
    </test>
    <test name="BSTestEnv3">
        <parameter name="environment" value="env3"/>
        <classes>
            <class name="Runner.CucumberTest"/>
        </classes>
    </test>
    <test name="BSTestEnv4">
